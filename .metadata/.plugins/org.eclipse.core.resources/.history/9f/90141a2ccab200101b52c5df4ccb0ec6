package com.medica.controller;

import java.util.HashSet;
import java.util.Set;

import javax.ws.rs.ApplicationPath;
import javax.ws.rs.core.Application;

import com.medica.config.JacksonConfig;

@ApplicationPath("Hospital")
public class Configuracion extends Application{

    @Override
    public Set<Class<?>> getClasses() {
        Set<Class<?>> resources = new HashSet<>();
        
        // Registrar tus clases REST
        resources.add(UsuarioServiceREST.class);
        
        // Registrar el provider de Jackson
        resources.add(JacksonConfig.class);
        
        return resources;
    }
}
